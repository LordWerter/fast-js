{
	"extends": "@fast-js/typescript/client/tsconfig.json",
	"include": [
		"./src/**/*.ts",
	],
	"exclude": [
		"node_modules",
		"**/node_modules",
		"build",
		"scripts",
		"config",
		"*.js",
		"coverage",
		"dist"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"typeRoots": [
			"<rootDir>/node_modules/@fast-js/types",
			"<rootDir>/node_modules/@types"
		]
	},
}