{
	"extends": "@fast-js/typescript/client/tsconfig.json",
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"config",
		"*.js",
		"coverage",
		"dist",
		"dist",
		"example",
		"docs",
		"src/**/*.test.ts",
		"src/**/*.test.tsx"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "react",
		"skipLibCheck": true,
		"strict": true,
		"typeRoots": [
			"src/definitions",
			"node_modules/@types",
			"node_modules/@fast-js/types"
		],
		"declarationDir": "./dist/types",
		"declaration": true	
	}
}