{
	"extends": "@fast-js/typescript/client/tsconfig.json",
	"include": [
		"<rootDir>/src/**/*.ts",
		"<rootDir>/src/**/*.tsx",
		".storybook/main.js",
		"<rootDir>/node_modules/@fast-js/utils/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/node_modules",
		"build",
		"scripts",
		"config",
		"*.js",
		"coverage",
		"dist"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"strict": true,
		"typeRoots": [
			"<rootDir>/node_modules/@types",
			"<rootDir>/node_modules/@fast-js/types"
		]
	}
}